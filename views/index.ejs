<!DOCTYPE html>
<html ng-app>
  <head>
    <title>Nyaaaam!</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap/css/bootstrap.css' />
    <script type="text/javascript" src="/javascripts/angular.js"></script>
    <script type="text/javascript" src="/javascripts/contacts.js"></script>
  </head>
  <body>
    <div class="container">
      <h1 class="row"> Add a contact! </h1>
      <div class="row">
        <div ng-controller="Contacts" ng-init="reloadContacts()">
          <div class="span8">
            <div class="row" ng-repeat="contact in contacts">
              <h3>{{ contact.name }}</h3>
              <p> {{ contact.number }} </p>
              <button class="btn" ng-click="editSubmit(contact.weight)"><i class="icon-pencil"></i> Edit</button>
            </div> 
          </div>
          <div class="span4">
            <form ng-submit="saveContact(editContactWeight)">
              <p><input required placeholder="Name" type="text" ng-bind="editContact.name" ng-model="editContactName"/></p>
              <p><input required placeholder="Number" type="text" ng-bind="editContact.number" ng-model="editContactNumber"/></p>
              <p><input type="submit" class="btn primary-btn"/></p>
            </form>
          </div>
        </div>
      </div> <!-- .row -->
    </div>
  </body>
</html>

